#!/bin/bash
# IPKG post rm script:
# WAGO Kontakttechnik GmbH & Co. KG / Helmut.Saal@wago.com

DOCKER_ETC="/etc/docker/"
DOCKER_DATA="/home/docker/"

# clean up files that are generated by dockerd
if [ -z "$DESTDIR" ]; then
	rm -rf "$DOCKER_ETC"
	umount -fl "$DOCKER_DATA"
	rm -rf "$DOCKER_DATA"
fi

exit 0
